@page
@model CRUD.Pages.Products.DetailsModel
@{
}
<form method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input readonly type="text" class="form-control" name="name" value="@Model.productInfo.name" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <input readonly type="text" class="form-control" name="category" value="@Model.productInfo.category" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <textarea readonly class="form-control" name="description" maxlength="500" rows="4">@Model.productInfo.description</textarea>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Quantity</label>
        <div class="col-sm-6">
            <input readonly type="number" min="0" max="100" class="form-control" name="quantity" value="@Model.productInfo.quantity" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Image</label>
        <div class="col-sm-6">
            <img class="img" alt="Image" src="~/Images/@Model.productInfo.image" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-2 d-grid">
            <a class="btn btn-primary" href="/Products/Edit?id=@Model.productInfo.id">Edit</a>
        </div>
        <div class="col-sm-2 d-grid">
            <a class="btn btn-danger" href="/Products/Delete?id=@Model.productInfo.id" onclick="return confirm('ARE YOU SURE YOU WANT TO DELETE THIS RECORD')">Delete</a>
        </div>
        <div class="col-sm-2 d-grid">
            <a class="btn btn-outline-primary" href="/Products/Index" role="button">Close</a>
        </div>
    </div>
</form>