@page
@model CRUD.Pages.Products.IndexModel
@{
}

<br>
<h2> List of Product</h2>
<a class='btn btn-primary btn-sm' style="margin-bottom: 10px" href='/Products/Create'> New Product</a>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Created_At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listProduct)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.category</td>
                <td>@item.description</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Products/Details?id=@item.id">Detail</a>
                    <a class="btn btn-primary btn-sm" href="/Products/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Products/Delete?id=@item.id" onclick="return confirm('ARE YOU SURE YOU WANT TO DELETE THIS RECORD')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
